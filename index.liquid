---
layout: layout.liquid
title: "Planetary Playing Cards"

sun:
    name: "Sun"
    color: "white"
    type: "G2V"

planets:
    - name: "Mercury"
      color: "gray"
      au: "0.39"
    - name: "Venus"
      color: "gold"
      au: "0.72"
    - name: "Earth"
      color: "blue"
      au: "1.00"
    - name: "Mars"
      color: "red"
      au: "1.52"
    - name: "Jupiter"
      color: "orange"
      au: "5.20"
    - name: "Saturn"
      color: "yellow"
      au: "9.58"
    - name: "Uranus"
      color: "lightblue"
      au: "19.22"
    - name: "Neptune"
      color: "darkblue"
      au: "30.05"

---

<div class="grid">
    <div class="sun-card">
        <div class="planet-avatar sun-avatar"></div>
        <h2 class="planet-name">Sun</h2>
        <p class="planet-au">Type G2V</p>
    </div>

    <div class="planets-container">
        {% for planet in planets %}
            {% include 'card.liquid', planet: planet %}
        {% endfor %}
    </div>
</div>
